@{
ViewData["Title"] = "Wypożyczalnia pojazdów";
Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h3 class="text-center">Ceny za jeden dzień wynajmu wskazanego typu pojazdu</h3>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th class="bg-primary"></th>
                <th class="bg-primary">Klasa 1</th>
                <th class="bg-primary">Klasa 2</th>
                <th class="bg-primary">Klasa 3</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="bg-primary">Samochód osobowy</td>
                <td>200 zł</td>
                <td>150 zł</td>
                <td>100 zł</td>
            </tr>
            <tr>
                <td class="bg-primary">Van</td>
                <td>250 zł</td>
                <td>200 zł</td>
                <td>150 zł</td>
            </tr>
            <tr>
                <td class="bg-primary">Motor</td>
                <td>150 zł</td>
                <td>100 zł</td>
                <td>75 zł</td>
            </tr>
            <tr>
                <td class="bg-primary">Inne pojazdy</td>
                <td>Cena</td>
                <td>ustalana</td>
                <td>indywidualnie</td>
            </tr>
        </tbody>
    </table>
  <h3 class="text-center">Tabela naliczania zniżek</h3>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th class="bg-primary">Status konta*</th>
                <th class="bg-primary">Dokonane rezerwacje</th>
                <th class="bg-primary">Procent zniżki</th>               
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="bg-primary">Standardowe</td>
                <td>mniej niż 5 </td>
                <td>0%</td>
                
            </tr>
            <tr>
                <td class="bg-primary">Premium</td>
                <td>conajmniej 5</td>
                <td>10%</td>                
            </tr>
            <tr>
                <td class="bg-primary">Vip</td>
                <td>conajmniej 10 </td>
                <td>20%</td>                
            </tr>
        </tbody>
    </table>
    * Uwaga, jedno konto użytkownika może posiadać na raz tylko jeden status konta.

</div>
